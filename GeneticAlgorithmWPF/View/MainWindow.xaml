<Window x:Class="GeneticAlgorithmWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeneticAlgorithmWPF"
        xmlns:charting="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
        mc:Ignorable="d"
        Title="GeneticAlgorithm" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="400" Margin="10,10,0,0">
            <Canvas x:Name="PathCanvas" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Width="400" Height="400" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Label Content="入力データ" HorizontalAlignment="Left" Margin="426,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="InputFileNameButton" Content="選択" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="707,39,0,0" Click="InputFileNameButton_Click"/>
        <Button x:Name="ConfigButton" Content="設定" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="707,77,0,0" Click="ConfigButton_Click"/>
        <Label Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="426,77,0,0"/>
        <Button x:Name="ExecuteAllButton" Content="実行" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="707,221,0,0" Click="ExecuteAllButton_Click"/>
        <Label x:Name="InputFileNameLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="426,36,0,0" Width="276"/>
        <WindowsFormsHost HorizontalAlignment="Left" Height="127" Margin="415,282,0,0" VerticalAlignment="Top" Width="367" Background="Black" >
            <charting:Chart x:Name="FittnessChart" BackColor="Black" Size="367, 127" >
            </charting:Chart>
        </WindowsFormsHost>
    </Grid>
</Window>
